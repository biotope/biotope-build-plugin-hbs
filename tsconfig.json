{
  "compilerOptions": {
    "lib": ["es6", "es7"],
    "target": "es6",
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist",
    "moduleResolution": "node",
    "module": "commonjs",
    "typeRoots": [
      "src/typings",
      "./node_modules/@types"
    ],
    "rootDir": "src"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "**/*.spec.ts"
  ]
}
